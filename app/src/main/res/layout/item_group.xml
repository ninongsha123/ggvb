<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F4F8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <View
        android:id="@+id/vs"
        android:layout_width="@dimen/dp_1"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lines"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_alignBottom="@+id/line"
       android:layout_alignParentTop="true"
        />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/rg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_7"
            android:background="@drawable/bg_groups">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="17"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_centerHorizontal="true"
                android:text="12月"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_toRightOf="@+id/rg"
            android:text="宝宝 1岁2个月13天"
            android:textColor="#ff333333"
            android:textSize="14sp" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/rg"
        android:layout_toRightOf="@+id/rg"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_itemg"
        >

    <com.tiancaijiazu.app.utils.status.NineGridTestLayout
        android:id="@+id/rlv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_14"
        android:layout_marginTop="8dp"
        app:sapcing="4dp"
        />
        <TextView
            android:id="@+id/txt"
            android:layout_below="@+id/rlv_data"
            android:layout_width="@dimen/dp_279"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:maxEms="20"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:text="你无技术规范请问，很多我去和回复， 快速导航和烦恼加快新技术俗话。苏北丢包办法把课本能否库房内，顶峰森林防火你违法哪..."
            android:textSize="@dimen/sp_14"
            />

        <LinearLayout
            android:id="@+id/sf"
            android:layout_below="@+id/txt"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/zan"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_14"
                android:button="@null"
                android:background="@drawable/select_zan_buttom"
                />
            <TextView
                android:id="@+id/zanshu"
                android:layout_below="@+id/rlv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_gravity="center_vertical"
                android:text="86"
                android:textSize="@dimen/sp_11"
                />
        <ImageView
            android:id="@+id/ijia"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_23"
            android:src="@mipmap/ping"
            />
            <TextView
                android:id="@+id/pingshu"
                android:layout_below="@+id/rlv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_gravity="center_vertical"
                android:text="86"
                android:textSize="@dimen/sp_11"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/dian"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sf"
            android:src="@mipmap/sand"
            />

    </RelativeLayout>
</RelativeLayout>