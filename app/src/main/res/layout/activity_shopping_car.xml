<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tiancaijiazu.app.activitys.shopping_activity.ShoppingCarActivity">

    <LinearLayout
        android:id="@+id/line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="@dimen/dp_64">
            <ImageView
                android:id="@+id/iv_finis"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/rec_back"/>
            <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
                android:layout_width="wrap_content"
                android:id="@+id/a"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorTextTitleHome"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_11"
                android:text="购物车"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/moren"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorTextTitleHome"
                    android:text="正品保障"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/moren"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorTextTitleHome"
                    android:text="假一赔十"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/moren"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorTextTitleHome"
                    android:text="权威检测"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/moren"/>
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorTextTitleHome"
                    android:text="无忧退换"
                    />
            </LinearLayout>
        </LinearLayout>
        <com.tiancaijiazu.app.utils.status.LoadingLayout
            app:isFirstVisible="true"
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_0">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nes"
                android:layout_width="match_parent"
                android:background="@color/color_earlveducation"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/zong_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/colorTextSubhead"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text="共 0 件商品"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rlv"
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.tiancaijiazu.app.utils.status.LoadingLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"
            android:layout_height="@dimen/dp_49">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@drawable/select_gw"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:textColor="@color/colorTextTitleHome"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="全选"/>
            <TextView
                android:id="@+id/jiesuan"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_37"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="结算(0)"
                android:background="@mipmap/zero_jie_suan"/>
            <LinearLayout
                android:id="@+id/line_bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@+id/jiesuan"
                android:gravity="bottom"
                >
                <TextView
                    android:id="@+id/fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/shopping"
                    android:textSize="@dimen/sp_11" />

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="0"
                    android:textColor="@color/shopping"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/line_bottom"
                android:layout_marginRight="@dimen/dp_9"
                android:textColor="@color/colorTextTitleHome"
                android:text="合计 :"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
