<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_69"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="购买数量"
        android:textColor="@color/colorTextTitleHome"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/iv_less"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_toLeftOf="@+id/tv_number"
        android:layout_marginTop="@dimen/dp_21"
        android:clickable="false"
        android:src="@mipmap/guige_less" />
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/sum_bj"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_toLeftOf="@+id/iv_add"
        android:layout_marginTop="@dimen/dp_21"
        android:text="1"
        android:textColor="@color/colorTextTitleHome"
        android:textSize="@dimen/sp_14" />
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_34"
        android:src="@mipmap/guige_add" />

</RelativeLayout>