<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
             />

        <RelativeLayout
            android:layout_below="@+id/head"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/button_vip"
            >
            <TextView
                android:id="@+id/vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="普通会员"
                android:textColor="#DFB864"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/head"
            android:layout_marginLeft="@dimen/dp_5"
            >

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@mipmap/phone"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toLeftOf="@+id/number"
            />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/promotion_code"
            android:layout_marginTop="@dimen/dp_15"
            android:text="17186180888"
            android:textColor="#00DEFF"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/ncikName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="这里是昵称"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            />


        <TextView
            android:id="@+id/dates"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="注册时间:2019-12-25"/>


        <TextView
            android:id="@+id/promotion_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐码：364855"
            android:layout_toRightOf="@id/dates"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_alignTop="@+id/dates"
            android:textColor="@color/colorTextSubhead"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/text_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队成员："
            android:textColor="@color/colorlookImage"
            android:layout_marginTop="@dimen/dp_76"
            android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/t_f"
                android:layout_toLeftOf="@id/t_f"
                android:layout_toRightOf="@+id/text_flag"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:text="1000"
                android:gravity="right"
                android:layout_alignTop="@id/text_flag"
                android:textColor="@color/n_color"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/t_fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_flag"
                android:layout_toRightOf="@+id/t_f"
                android:text="人"
                android:textColor="@color/n_color"
                android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="终身园长："
            android:layout_below="@id/text_flag"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_alignLeft="@id/text_flag"
            android:textColor="@color/colorlookImage" />

            <TextView
                android:id="@+id/zhi_sum"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:text="10"
                android:gravity="right"
                android:layout_alignTop="@id/num"
                android:layout_toRightOf="@id/num"
                android:textColor="@color/n_color" />
        <TextView
            android:id="@+id/zhi_sums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="人"
            android:layout_alignTop="@id/num"
            android:layout_toRightOf="@+id/zhi_sum"
            android:textColor="@color/n_color" />
        <TextView
            android:id="@+id/spokespersons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:text="代  言  人："
            android:layout_alignTop="@id/text_flag"
            android:layout_toRightOf="@+id/t_fs"
            android:textColor="@color/colorlookImage" />

            <TextView
                android:id="@+id/spokesperson_sum"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/spokespersons"
                android:textSize="@dimen/sp_13"
                android:gravity="right"
                android:text="100"
                android:layout_toRightOf="@+id/spokespersons"
                android:textColor="@color/n_color" />
        <TextView
            android:id="@+id/spokesperson_sums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/spokespersons"
            android:textSize="@dimen/sp_14"
            android:text="人"
            android:layout_toRightOf="@+id/spokesperson_sum"
            android:textColor="@color/n_color" />

        <TextView
            android:layout_alignTop="@id/num"
            android:id="@+id/president"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spokespersons"
            android:textSize="@dimen/sp_14"
            android:text="分  公  司："
            android:textColor="@color/colorlookImage" />

            <TextView
                android:id="@+id/president_sum"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/president"
                android:textSize="@dimen/sp_13"
                android:layout_toRightOf="@+id/president"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/n_color" />

        <TextView
            android:id="@+id/president_sums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/president"
            android:layout_toRightOf="@+id/president_sum"
            android:textSize="@dimen/sp_14"
            android:text="人"
            android:textColor="@color/n_color" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="#F1F1F1" />

</LinearLayout>