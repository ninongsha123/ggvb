<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.tiancaijiazu.app.activitys.diy.RenewActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">

        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/can_or_not_back" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="早教课正式卡续费"
            android:layout_marginBottom="@dimen/dp_11"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_17" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/colorView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/colorTextTitleHome"
        android:text="距离你当前课程到期还有："/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="#F3495D"
            android:text="157"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/colorTextTitleHome"
            android:text="天"/>
        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="#F3495D"
            android:text="18"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/colorTextTitleHome"
            android:text="小时"/>
        <TextView
            android:id="@+id/minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="#F3495D"
            android:text="23"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/colorTextTitleHome"
            android:text="分"/>
        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="#F3495D"
            android:text="48"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/colorTextTitleHome"
            android:text="秒"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextSubhead"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="课程到期前续费"/>
    <LinearLayout
        android:id="@+id/line_one"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@mipmap/formal_card_two"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_height="@dimen/dp_193">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/card_tab"/>
            <TextView
                android:id="@+id/card_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="早教学院年卡"/>
            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/card_recommend"/>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/money_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="@dimen/dp_16"
                android:text="¥3129"/>
        </LinearLayout>
        <TextView
            android:id="@+id/yuan_jia_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:paddingRight="@dimen/dp_16"
            android:includeFontPadding="false"
            android:text="¥1698"/>
        <TextView
            android:id="@+id/commom_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="共48周课程推送"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"/>

        <TextView
            android:id="@+id/xu_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/bg_white_but"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/colorZhu"
            android:gravity="center"
            android:text="续课"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_two"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@mipmap/formal_card_three"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_height="@dimen/dp_193">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/card_tab"/>
            <TextView
                android:id="@+id/card_name_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="早教学院年卡"/>

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/money_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="@dimen/dp_16"
                android:text="¥3129"/>
        </LinearLayout>
        <TextView
            android:id="@+id/yuan_jia_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:paddingRight="@dimen/dp_16"
            android:includeFontPadding="false"
            android:text="¥1698"/>
        <TextView
            android:id="@+id/commom_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="共48周课程推送"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"/>
        <TextView
            android:id="@+id/xu_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/bg_white_but"
            android:textSize="@dimen/sp_17"
            android:textColor="#F3495D"
            android:gravity="center"
            android:text="续课"/>


    </LinearLayout>

</LinearLayout>
