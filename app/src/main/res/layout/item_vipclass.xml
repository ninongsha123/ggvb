<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_165">
        <RelativeLayout
            android:id="@+id/rtl"
            android:layout_width="@dimen/dp_110"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="@dimen/dp_140">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/nice_iv"
                app:riv_corner_radius="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_19"
                android:src="@mipmap/vip"
                android:layout_marginLeft="@dimen/dp_5"
                />
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:src="@mipmap/video_play"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                />
        </RelativeLayout>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/titleone"
            android:layout_toRightOf="@id/rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_9"
            android:text="孩子哭闹你就妥协了吗？"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_15"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="孩子小，会发生不经允许乱动别人东西的事情，这是边界意识薄弱，需要从小培养"
            android:layout_below="@id/titleone"
            android:layout_toRightOf="@id/rtl"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_13"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/sp_12"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_toRightOf="@id/rtl"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/number_icon"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:visibility="gone"
                android:src="@mipmap/number_people"
                android:layout_toRightOf="@id/rtl"
                />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number_icon"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorTextSubhead"
                />
            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorTextSubhead"
                android:layout_marginRight="@dimen/dp_16"
                android:text="共306课时"/>

        </LinearLayout>
        <TextView
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rtl"
            android:text="讲师：小芳"
            android:textColor="@color/vipcolor"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_11"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_22"
            />
        <TextView
            android:id="@+id/yuan_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_21"
            android:text="¥189"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorTextSubhead"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_toLeftOf="@+id/fu_hao"
            />
        <TextView
            android:id="@+id/fu_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:layout_toLeftOf="@+id/money"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_21"
            android:textColor="@color/vipcolor"
            android:text="¥"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/sp_17"
            android:text="198"
            android:textColor="@color/vipcolor"
            android:layout_marginRight="@dimen/dp_16"
            />
    </RelativeLayout>

</RelativeLayout>