<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.tiancaijiazu.app.activitys.english.EnglishClassActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/rec_back"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/colorTextTitleHome"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="亲子英语课"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
           />
        <CheckBox
            android:layout_toLeftOf="@+id/share"
            android:layout_alignBottom="@+id/share"
            android:button="@null"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_6"
            android:visibility="gone"
            android:background="@drawable/select_collect_top"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:visibility="gone"
            android:src="@mipmap/share"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:background="@mipmap/tara_hunt"
                android:layout_height="@dimen/dp_147">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorTextTitleHome"
                    android:includeFontPadding="false"
                    android:text="The sun is out,the rain is gone."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextTitleHome"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dp_11"
                    android:text="深入探究：天晴了水没了"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_27"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dp_8"
                android:text="在今天的主题课程中，我们一起对各种各样的形状进行了认知。那么形状要怎么说呢？没错，shape。课程中，我们还会经常问宝宝：这是什么形状呀？Whate shape is this？怎么样，你学会了吗？快开始今天的英语课程，学习更详尽的讲解吧！"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@mipmap/english_back"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_height="@dimen/dp_207">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_22"
                            android:src="@mipmap/word"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_22"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:textColor="@color/colorTextTitleHome"
                            android:text="shape"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@drawable/bg_white"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:src="@mipmap/horn"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_marginRight="@dimen/dp_15"
                                android:textColor="@color/colorTextTitleHome"
                                android:includeFontPadding="false"
                                android:text="/seip/"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorTextTitleHome"
                        android:layout_marginLeft="@dimen/dp_56"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="n.形状"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_55"
                        android:layout_marginRight="@dimen/dp_56"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layerType="software"
                        android:background="@drawable/imaginary_line"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_22"
                            android:src="@mipmap/sentence"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:textColor="@color/colorTextTitleHome"
                            android:text="It`s raining.Let`s take an umbrella."/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@drawable/bg_while_circle"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:src="@mipmap/horn"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_55"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/colorTextTitleHome"
                        android:text="下雨了，我们要带伞。"/>
                </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_27"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dp_8"
                android:text="首先，家长用中文解释这个词，给宝宝示范一下或指一下，然后再引入这个英文单词。反复读几次，给宝宝一个很好的初印象。以后每次遇到这个词时，我们都可以用英语提醒他，这样宝宝就能知道这个词和真实生活之间的联系。"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_48"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"/>
            <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                app:shadowSize="@dimen/dp_5"
                app:shadowColor="#457cb4"
                app:cardBackgroundColor="@color/colorWhite"
                app:shadowFluidShape="linear"
                app:cornerRadius="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_22"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/song"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:textColor="@color/colorTextTitleHome"
                            android:includeFontPadding="false"
                            android:layout_centerHorizontal="true"
                            android:text="当晴天或雨天来临时"/>
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyler"
                        android:layout_width="match_parent"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_grey"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_26"
                        android:layout_height="@dimen/dp_40">
                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:src="@mipmap/sound_wave"/>
                        <TextView
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="#5BCFFF"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="01:16``"/>
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:background="@drawable/select_lan_bt"
                            android:layout_marginRight="@dimen/dp_15"
                            android:button="@null"/>
                    </LinearLayout>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
