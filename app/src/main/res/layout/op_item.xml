<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/line"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/address_ic"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@mipmap/address_icon" />

        <TextView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_toRightOf="@+id/address_ic"
            android:text="请填写地址"
            android:visibility="gone"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_16" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/address_ic"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_toRightOf="@+id/address_ic"
            android:includeFontPadding="false"
            android:text="爱吃菠菜"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/title_name"
            android:includeFontPadding="false"
            android:text="17600118593"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_13"
            android:visibility="visible" />
<!--    android:layout_alignBottom="@+id/address_ic"-->
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/address"
            android:layout_width="@dimen/dp_275"
            android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_toRightOf="@+id/address_ic"
            android:enabled="true"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="北京市朝阳区高碑店北花园小区3号院4号楼杜工苏..."
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_7"
            android:src="@mipmap/enter_button" />
    </RelativeLayout>
</LinearLayout>