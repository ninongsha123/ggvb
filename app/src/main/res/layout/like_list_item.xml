<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_head"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorTextTitleHome"
            android:text="意大利烤鸡卷"/>
        <TextView
            android:id="@+id/summary"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorTextTitle"
            android:maxLines="1"
            android:enabled="true"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="个人描述，让大家更好地认识你个人..."/>

        <ImageView
            android:id="@+id/iv_hu_xiang"
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/is_foll"/>
        <ImageView
            android:id="@+id/guan_zu"
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/user_ok"/>
        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentBottom="true"
            android:background="@color/colorView"/>
    </RelativeLayout>
</LinearLayout>