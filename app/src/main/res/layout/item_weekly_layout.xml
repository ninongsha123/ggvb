<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <www.linwg.org.lib.LCardView
        android:id="@+id/lcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowSize="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        app:shadowColor="#003BFF"
        app:cardBackgroundColor="@color/colorWhite"
        app:shadowFluidShape="linear"
        app:cornerRadius="@dimen/dp_5">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                android:maxLines="1"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="#FFB423"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="第1周：大自然-水"/>
            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:textSize="@dimen/sp_14"
                android:lineSpacingExtra="@dimen/dp_5"
                android:textColor="@color/colorTextTitleHome"
                android:text="宝宝天生喜欢玩水，水的特性，神秘的水底世界，还有生活在水里的小鱼，都可以带给宝宝不一样的体验"/>
          <!--  <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/drop_down"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:button="@null"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_3"
                android:background="@drawable/select_drop_down"/>-->
        </LinearLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>