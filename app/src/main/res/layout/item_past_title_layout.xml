<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <www.linwg.org.lib.LCardView
        android:id="@+id/lcard"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_11"
        app:shadowSize="@dimen/dp_5"
        app:shadowColor="#457cb4"
        app:cardBackgroundColor="@color/colorWhite"
        app:shadowFluidShape="linear"
        app:cornerRadius="@dimen/dp_5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_69">
                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/min_oval"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/colorTextTitleHome"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorTextSubhead"
                        android:includeFontPadding="false"
                        android:text=""/>
                </LinearLayout>
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:button="@null"
                    android:clickable="false"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/select_past_la"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </www.linwg.org.lib.LCardView>
</LinearLayout>