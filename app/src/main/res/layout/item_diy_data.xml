<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <www.linwg.org.lib.LCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowSize="@dimen/dp_5"
        app:shadowColor="#457cb4"
        app:cardBackgroundColor="@color/colorWhite"
        app:shadowFluidShape="linear"
        app:cornerRadius="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/diy_iv_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/diy_data_6_8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/colorTextTitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textColor="@color/colorTextTitleHome"
                    android:includeFontPadding="false"
                    android:text="材料清单"/>
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/colorTextTitle"/>
            </LinearLayout>
            <com.tiancaijiazu.app.activitys.views.FlowGroupView
                android:id="@+id/flow"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/diy_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/diy_ok"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_15"/>
        </LinearLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>