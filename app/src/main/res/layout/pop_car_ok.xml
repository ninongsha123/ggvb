<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_360">
<TextView
    android:text="宝宝生日"
    android:textSize="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_18"
    android:layout_marginLeft="@dimen/dp_18"
    android:textColor="@color/colorTextTitleHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/baby_birthday"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:id="@+id/year"
           android:textColor="#C5A86E"
           android:textSize="@dimen/sp_15"
           android:text=""
           android:gravity="center"
           android:background="@drawable/pop_car_ok_year"
           android:layout_width="@dimen/dp_65"
           android:layout_height="@dimen/dp_25"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:id="@+id/text_year"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@id/text_year"
           android:id="@+id/month"
           android:textColor="#C5A86E"
           android:textSize="@dimen/sp_15"
           android:text=""
           android:gravity="center"
           android:background="@drawable/pop_car_ok_year"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_25"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:id="@+id/text_month"
            android:layout_toRightOf="@id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@id/text_month"
           android:id="@+id/day"
           android:textColor="#C5A86E"
           android:textSize="@dimen/sp_15"
           android:text=""
           android:gravity="center"
           android:background="@drawable/pop_car_ok_year"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_25"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/text_day"
            android:layout_toRightOf="@id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_14"
        android:background="#F1F1F1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:text="选择类型"
        android:textSize="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_17"
        android:textColor="@color/colorTextTitleHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
          android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/grow_up"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/pop_btn_car_ok_flase"
                android:gravity="center"
                android:text="成长卡"
                android:textColor="#C5A86E"
                android:textSize="@dimen/dp_14" />
            <TextView
                android:id="@+id/annual_card"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/pop_btn_car_ok_flase"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_27"
                android:text="年卡"
                android:textColor="#C5A86E"
                android:textSize="@dimen/dp_14" />
            <TextView
                android:id="@+id/falf_year_card"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_27"
                android:background="@drawable/pop_btn_car_ok_flase"
                android:text="半年卡"
                android:textColor="#C5A86E"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_23"
        android:background="#F1F1F1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/xuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:text="优惠券"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_17"
                android:textColor="@color/colorTextTitleHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/specia_offer"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffc5a86e"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/money_linear"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付金额："
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="#ffc5a86e"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/card_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_5"
        android:src="@mipmap/card_five_ok"/>
</LinearLayout>