<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackgroud"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/error_img"
            android:layout_width="139dp"
            android:layout_height="130dp"
            android:src="@mipmap/undata" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/unError"
            android:textColor="@color/colorsix"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/error_reload_btn"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:text="@string/releay"
            android:textColor="@color/color_releay"
            android:gravity="center"
            android:background="@drawable/biankuang"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>