<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="@dimen/dp_226"
            android:background="@mipmap/game_purpose"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_54">
            <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                android:id="@+id/text_study"
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="游戏目"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_title_wai"
            android:padding="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_marginBottom="@dimen/dp_35"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@mipmap/recyclerview_background"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylerView"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_centerInParent="true"
                    android:overScrollMode="never"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>