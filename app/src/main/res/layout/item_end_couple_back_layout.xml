<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/submit_line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_39"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@drawable/bg_ke_back"
        android:layout_height="@dimen/dp_115">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorTextTitleHome"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/ke"/>
        <TextView
            android:id="@+id/submit"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_couple_back"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center"
            android:text="提交课后反馈"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/custom_made"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205"
        android:layout_marginLeft="@dimen/dp_39"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@drawable/bg_ke_back">
        <TextView
            android:id="@+id/label"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_22"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_ke_label"
            android:gravity="center"
            android:text="延伸课"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorTextTitleHome"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="为陌陌定制的今日拓展游戏"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_height="@dimen/dp_130">
            <LinearLayout
                android:id="@+id/line_one"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_min_two"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:scaleType="fitXY"
                    />
                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/game_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorTextTitleHome"
                    android:text="游戏名称"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_two"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_min_two"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:scaleType="fitXY"
                    />
                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/game_name_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textColor="@color/colorTextTitleHome"
                    android:text="游戏名称"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>