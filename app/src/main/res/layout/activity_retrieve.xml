<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiancaijiazu.app.activitys.activitypage.RegisterActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_31"
            android:src="@mipmap/login_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:text="找回密码"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_88"
            android:textColor="@color/colorWhite"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_128"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:text="输入"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:text="1760****593"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="#FFE153"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:text="收到的4位验证码"/>
        </LinearLayout>
        <EditText
            android:id="@+id/code_edit"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_167"
            android:inputType="number"
            android:maxLength="4"
            android:background="@mipmap/code"
            android:hint="输入短信验证码"
            android:paddingLeft="@dimen/dp_15"
            android:textColorHint="#c2d7fe"
            android:textCursorDrawable="@drawable/edit_gb" />

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_167"
            android:layout_toRightOf="@+id/code_edit"
            android:background="@mipmap/code"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />
        <EditText
            android:id="@+id/pass_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:hint="输入密码"
            android:paddingLeft="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_53"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_53"
            android:textColorHint="#c2d7fe"
            android:layout_below="@+id/edit_phone"
            android:layout_marginTop="@dimen/dp_222"
            android:textCursorDrawable="@drawable/edit_gb"
            android:background="@mipmap/phone_edit"/>
        <LinearLayout
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_305"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/select_bt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="我已阅读并同意"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="#FFE153"
                android:text="用户协议"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:text="和"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFE153"
                android:textSize="@dimen/sp_12"
                android:text="隐私政策"/>
        </LinearLayout>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginRight="@dimen/dp_53"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_330"
            android:clickable="false"
            android:textSize="@dimen/sp_20"
            android:background="@mipmap/login_no"/>
    </RelativeLayout>

</FrameLayout>
