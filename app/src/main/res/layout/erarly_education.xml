<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_25"
        android:layout_height="@dimen/dp_202">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:scaleType="fitXY"
            android:src="#E7E7E7"
            app:riv_corner_radius="@dimen/dp_5" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="读书真的能改变气质？这是我见过最好的回答"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/tv_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/vipcolor"
            android:layout_alignParentBottom="true"
            android:text="¥"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_fu"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp"
            android:text="168"
            android:textColor="@color/vipcolor"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_toRightOf="@id/money"
            android:text="¥365"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorTextSubhead" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="共32课时"
            android:textColor="@color/colorTextSubhead"
            android:textSize="@dimen/sp_11" />-->
    </RelativeLayout>

</RelativeLayout>