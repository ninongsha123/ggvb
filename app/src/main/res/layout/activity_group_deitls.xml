<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activitys.issue.GroupDeitlsActivity">

    <RelativeLayout
        android:id="@+id/rls"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="@dimen/dp_64"
        android:backgroundTint="@color/white"
        >
        <ImageView
            android:id="@+id/iv_finid"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/rec_back"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:layout_width="wrap_content"
            android:id="@+id/a"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/colorTextTitleHome"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="成长日记"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrov"
        android:layout_below="@id/rls"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                            <RelativeLayout
                                android:id="@+id/tre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/img"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:layout_marginLeft="@dimen/dp_16"
                                    android:layout_marginTop="@dimen/dp_10"
                                    />
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="荷叶茶"
                                    android:textColor="#ff333333"
                                    android:layout_toRightOf="@+id/img"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/sp_12"
                                    android:textSize="@dimen/sp_14"
                                    />
                                <TextView
                                    android:id="@+id/age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="宝宝 4个月2天"
                                    android:textColor="#ff333333"
                                    android:layout_toRightOf="@+id/img"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_35"
                                    android:textSize="@dimen/sp_11"
                                    />
                                <ImageView
                                    android:id="@+id/dian"
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_16"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/sand"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_below="@+id/tre"
                                android:layout_marginTop="@dimen/dp_10"
                                android:id="@+id/line"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                >

                                <com.tiancaijiazu.app.utils.status.NineGridTestLayout
                                    android:id="@+id/rlv_data"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp_14"
                                    android:layout_marginTop="8dp"
                                    app:sapcing="4dp"
                                    />
                                <TextView
                                    android:id="@+id/txt"
                                    android:layout_below="@+id/rlv_data"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="5dp"
                                    android:layout_marginLeft="@dimen/dp_17"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:text="你无技术规范请问，很多我去和回复， 快速导航和烦恼加快新技术俗话。苏北丢包办法把课本能否库房内，顶峰森林防火你违法哪..."
                                    android:textSize="@dimen/sp_14"
                                    />
                                <TextView
                                    android:id="@+id/date"
                                    android:layout_below="@+id/txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2019-08-23"
                                    android:textColor="#ffbbbbbb"
                                    android:textSize="@dimen/sp_11"
                                    android:layout_marginTop="@dimen/dp_43"
                                    android:layout_marginLeft="@dimen/dp_27"
                                    />
                                <RelativeLayout
                                    android:id="@+id/sf"
                                    android:layout_below="@+id/txt"
                                    android:layout_marginTop="@dimen/dp_35"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_16"
                                    >

                                    <ImageView
                                        android:id="@+id/zan"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:src="@mipmap/zan"
                                        android:button="@null" />
                                    <TextView
                                        android:id="@+id/zanshu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_3"
                                        android:layout_toRightOf="@+id/zan"
                                        android:layout_centerVertical="true"
                                        android:text="86"
                                        android:textSize="@dimen/sp_11"
                                        />


                                </RelativeLayout>
                                <View
                                    android:id="@+id/vs"
                                    android:layout_below="@id/date"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_width="@dimen/dp_343"
                                    android:layout_height="@dimen/dp_0_5"
                                    android:background="#EBEBEB"
                                    android:layout_centerHorizontal="true"
                                    />

                                <TextView
                                    android:layout_below="@+id/vs"
                                    android:id="@+id/comment"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_marginLeft="@dimen/dp_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="共 36 条评论"
                                    android:textColor="#ff333333"
                                    android:textSize="@dimen/sp_12"
                                    />
                                <android.support.v7.widget.RecyclerView
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rlv"
                                    android:layout_below="@+id/comment"
                                    />
                                <ImageView
                                    android:layout_below="@id/rlv"
                                    android:id="@+id/iv_discuss"
                                    android:layout_width="@dimen/dp_160"
                                    android:layout_height="@dimen/dp_180"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:layout_marginBottom="@dimen/dp_19"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/discuss_no"/>
                            </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            />
    </RelativeLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/edit_comm"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_265"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/bg_tab_com"
            android:drawableLeft="@mipmap/comm"
            android:textSize="@dimen/sp_13"
            android:hint="说点什么..."
            android:paddingLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextTitleHome"
            android:textColorHint="@color/colorTextSubhead"
            android:textCursorDrawable="@drawable/edit_pl" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/rel"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_send"
            android:layout_marginRight="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:layout_centerInParent="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>