<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_87"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/dp_2" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/teachingAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/colorTextSubhead"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>

</LinearLayout>