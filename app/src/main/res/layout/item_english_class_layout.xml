<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_16"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_15"
            android:background="@color/colorLightRed"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorTextTitleHome"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="怎么说最地道、最生动"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorTextTitleHome"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_21"
        android:text="表达“带伞”这个意思，我们应该用take an umbrella这个固定搭配。"/>
    <LinearLayout
        android:layout_width="@dimen/dp_203"
        android:gravity="center_vertical"
        android:background="@drawable/bg_grey"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_26"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/sound_wave"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="#5BCFFF"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="00:05``"/>
        <CheckBox
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/select_lan_bt"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"/>
    </LinearLayout>
</LinearLayout>