<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <www.linwg.org.lib.LCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowSize="@dimen/dp_3"
        app:shadowColor="#0040FF"
        app:cardBackgroundColor="@color/colorWhite"
        app:shadowFluidShape="linear"
        app:cornerRadius="@dimen/dp_5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/line_tu"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/masonry_item_img"
                        android:scaleType="fitXY"/>
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:id="@+id/masonry_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/colorTextTitleHome"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_8"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:id="@+id/iv_head"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="#BBBBBB"
                        android:maxLines="1"
                        android:enabled="true"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_name"
                        android:layout_toRightOf="@+id/iv_head"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="测试数据"
                        />
                    <RelativeLayout
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text"
                            android:layout_width="@dimen/dp_50"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/dp_30" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/iv_collect"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:layout_gravity="center"
                                android:background="@drawable/select_collect"
                                android:button="@null"
                                />
                            <TextView
                                android:id="@+id/like_sum"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/colorTextSubhead"
                                />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/comm_rec"
                android:visibility="gone"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:src="@mipmap/comm_rec"/>
        </RelativeLayout>

    </www.linwg.org.lib.LCardView>
</LinearLayout>