<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:alpha="0.9"
        android:background="@drawable/coner_popuwindiw">
        <ImageView
            android:id="@+id/cancle"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/cancle_music" />
        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_toRightOf="@+id/cancle"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                 />

        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@+id/rela"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/sp_13"
            android:ellipsize="end"
            android:textColor="@color/colorWhite" />


        <ImageView
            android:id="@+id/start"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_7"
            android:src="@mipmap/music_pause" />
        <!--<View
            android:id="@+id/lineone"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/start"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@color/colorWhite" />-->
<!--
        <ImageView
            android:id="@+id/collect"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lineone"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/collect_not" />-->
        <SeekBar
            android:id="@+id/seek"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@id/rela"
            android:paddingStart="@dimen/dp_0"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_0"
            android:thumb="@null"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_style2"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/seek"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_10"
            />


    </RelativeLayout>


</LinearLayout>
