<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <www.linwg.org.lib.LCardView
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_11"
        app:shadowSize="@dimen/dp_5"
        app:shadowColor="#003BFF"
        app:cardBackgroundColor="@color/colorWhite"
        app:shadowFluidShape="linear"
        app:cornerRadius="@dimen/dp_5"
        android:layout_height="@dimen/dp_135">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rounded"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_95"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                app:riv_corner_radius="@dimen/dp_2" />
            <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
                android:id="@+id/title_name"
                android:layout_toRightOf="@+id/rounded"
                android:layout_alignTop="@+id/rounded"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="北京天才家族教育科技有限..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/colorTextTitleHome"
                />
            <com.tiancaijiazu.app.activitys.views.FlowGroupView
                android:id="@+id/flow"
                android:layout_below="@+id/title_name"
                android:layout_toRightOf="@+id/rounded"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/rounded"
                android:layout_alignBottom="@+id/rounded"
                android:layout_marginLeft="@dimen/dp_7"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/coordinates"/>
                <TextView
                    android:id="@+id/site"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/colorTextSubhead"
                    android:text="海淀区  苏州街"/>
                <TextView
                    android:id="@+id/juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorTextSubhead"
                    android:text="1.4km"/>
            </LinearLayout>
        </RelativeLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>