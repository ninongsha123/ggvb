<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_125"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.tiancaijiazu.app.fragments.views.NiceImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_15"
        app:corner_radius="@dimen/dp_2"
        android:scaleType="fitXY"
        android:layout_height="@dimen/dp_90" />
    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
        android:id="@+id/title_name"
        android:layout_toRightOf="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_alignTop="@+id/iv"
        android:layout_marginLeft="@dimen/dp_11"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorTextTitleHome"
        android:enabled="true"
        android:maxLines="2"
        android:layout_marginRight="@dimen/dp_26"
        android:text="将PS和手机连接到相同的wifi环境下, 打开APP即能搜索到自己的PS设备"/>
    <TextView
        android:id="@+id/guige"
        android:layout_below="@+id/title_name"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorTextSubhead"
        android:layout_toRightOf="@+id/iv"
        android:layout_marginLeft="@dimen/dp_11"
        android:text="尺寸：L；颜色：蓝色"/>
    <TextView
        android:id="@+id/fu_hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/shopping"
        android:layout_alignBottom="@+id/iv"
        android:layout_toRightOf="@+id/iv"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/dp_13"
        android:text="¥"/>
    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
        android:id="@+id/money"
        android:layout_toRightOf="@+id/fu_hao"
        android:layout_alignBottom="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:includeFontPadding="false"
        android:textColor="@color/shopping"
        android:text="129.00"/>
    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorTextSubhead"
        android:layout_alignBottom="@+id/money"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:text="x1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:background="@color/colorView"/>
</RelativeLayout>