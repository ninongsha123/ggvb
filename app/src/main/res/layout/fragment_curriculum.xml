<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.tiancaijiazu.app.activitys.offline.fragments.CurriculumFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_11"
                app:shadowSize="@dimen/dp_5"
                app:shadowColor="#003BFF"
                app:cardBackgroundColor="@color/colorWhite"
                app:shadowFluidShape="linear"
                app:cornerRadius="@dimen/dp_5">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/rounded"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_176"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="@dimen/dp_2"/>
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_19"
                        android:textColor="@color/colorTextTitleHome"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="课程名称1"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginRight="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/synthesize"/>
                            <TextView
                                android:id="@+id/courseType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/colorTextSubhead"
                                android:layout_marginLeft="@dimen/dp_1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/baby_age"/>
                            <TextView
                                android:id="@+id/month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/colorTextSubhead"
                                android:layout_marginLeft="@dimen/dp_1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/course_duration"/>
                            <TextView
                                android:id="@+id/duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/colorTextSubhead"
                                android:layout_marginLeft="@dimen/dp_1"
                                android:text="45分钟"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </www.linwg.org.lib.LCardView>
            <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_11"
                app:shadowSize="@dimen/dp_5"
                app:shadowColor="#003BFF"
                app:cardBackgroundColor="@color/colorWhite"
                app:shadowFluidShape="linear"
                app:cornerRadius="@dimen/dp_5">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/colorTextTitleHome"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="课程介绍"/>
                    <TextView
                        android:id="@+id/summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/colorTextTitle"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:text="你的亢奋哦i可选择烦死了可能看下能否老师肯定，想你打算离开蓝枫考虑的，没事的麻烦了萨克放假哦扣十分好看上了飞机欧文，是男方女方就安排。的看法说的那么覅可能到达目的港金额都算了算了，当年为偶尔配领导的美国的领导们嗯嗯。那地方呢都可能符合滴哦，得到的女顾客的了么发，恶魔法国颇为。"/>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>
            <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_11"
                app:shadowSize="@dimen/dp_5"
                app:shadowColor="#003BFF"
                app:cardBackgroundColor="@color/colorWhite"
                app:shadowFluidShape="linear"
                app:cornerRadius="@dimen/dp_5">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/colorTextTitleHome"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="图文详情"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recylerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"/>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>
            <www.linwg.org.lib.LCardView
                android:id="@+id/lcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginBottom="@dimen/dp_55"
                app:shadowSize="@dimen/dp_5"
                app:shadowColor="#003BFF"
                app:cardBackgroundColor="@color/colorWhite"
                app:shadowFluidShape="linear"
                app:cornerRadius="@dimen/dp_5">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/colorTextTitleHome"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="园所介绍"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/cor"
                            android:layout_width="@dimen/dp_44"
                            android:layout_height="@dimen/dp_44"
                            app:riv_corner_radius="@dimen/dp_2"
                            android:src="@color/colorView"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_height="wrap_content">
                            <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                                android:id="@+id/yuan_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/colorTextTitleHome"
                                android:includeFontPadding="false"
                                android:text="天才家族早教园（青岛园）"/>
                            <TextView
                                android:id="@+id/yuan_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/sp_12"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/colorTextTitle"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="海淀区  中关村"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_marginRight="@dimen/dp_5"
                            android:src="@mipmap/make_an_right"/>
                    </LinearLayout>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/line_make_on"
        android:orientation="horizontal"
        android:background="@color/class_buy"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorWhite"
            android:text="免费预约"/>
    </LinearLayout>

</RelativeLayout>
