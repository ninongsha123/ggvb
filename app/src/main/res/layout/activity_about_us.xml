<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activitys.activitypage.myactivity.AboutUsActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/rec_back" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="关于我们"
            android:layout_marginBottom="@dimen/dp_11"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <View
        android:id="@+id/v"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#F1F1F1"/>
    <LinearLayout
        android:layout_below="@id/v"
        android:layout_marginTop="@dimen/dp_55"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/about_us_picture"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_83"/>
        <TextView
            android:id="@+id/ban"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="当前已是最新版本 "
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_29"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_73"
        android:text="All Rights Reserved By Genius Family"
        android:textColor="#ff999999"
        android:textSize="13sp"
        />
</RelativeLayout>