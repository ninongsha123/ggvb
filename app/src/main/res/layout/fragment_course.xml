<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_earlveducation"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/rela"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_193"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@mipmap/half_a_year_card">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_39"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@mipmap/card_tab"/>
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="早教学院无忧卡"
                            android:layout_marginLeft="@dimen/dp_7"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_20" />
                        <RelativeLayout
                            android:id="@+id/renewal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_16"
                            >
                            <TextView
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_23"
                                android:alpha="0.3"
                                android:background="@drawable/bg_renew_change"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="续费"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/colorWhite"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_4"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="线下20年早教经验"/>

                    <LinearLayout
                        android:id="@+id/lin"
                        android:layout_below="@+id/title"
                        android:layout_width="match_parent"
                        android:gravity="bottom"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/baby_birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:includeFontPadding="false"
                            android:text="宝宝生日："
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/birth"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />
                        <TextView
                            android:id="@+id/curriculum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前课程阶段："
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/year_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6-8月龄"
                            android:layout_marginRight="@dimen/dp_16"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/bottom_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:max="100"
                        android:layout_marginTop="@dimen/dp_9"
                        android:progressDrawable="@drawable/jz_bottom_progress_di"/>
                    <TextView
                        android:id="@+id/degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prog"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="已推送 29 周/共 53 周"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/select_clock"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/tv_one"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="本月共打卡"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textColor="#FF8261"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:src="@mipmap/right_min_jian" />
                </LinearLayout>-->


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_37"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@mipmap/latest_tags" />

                <LinearLayout
                    android:id="@+id/bell_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@mipmap/bell" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-07-08推送下周课程"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bell_line"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@drawable/bg_college_introduce"
                    android:orientation="vertical">

                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:id="@+id/week_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="第29周：大自然-空气"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/week_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_17"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_18"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:text="空气无色又无形，我们看不到它，却能处处感受到它。本周以大自然中的空气为主题，一起近距离地去寻找它吧！"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylerView"
                    android:layout_below="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>
                <LinearLayout
                    android:id="@+id/line"
                    android:orientation="horizontal"
                    android:layout_below="@+id/recylerView"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#00DEFF"
                        android:text="回顾往期课程"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
