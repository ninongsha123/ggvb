<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiancaijiazu.app.activitys.activitypage.LogInActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv"
        android:layout_width="match_parent"
        android:clickable="false"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_31"
            android:src="@mipmap/login_back" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_31"
            android:gravity="right"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_88"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/fast"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/linearLayout"
                    android:layout_alignTop="@+id/linearLayout"
                    android:gravity="center"
                    android:text="快捷登录"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tab_color_one"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_tab_bai" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pass"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="密码登录"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tab_color_two"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_tab_bai"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginRight="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_150"
            android:inputType="number"
            android:phoneNumber="true"
            android:maxLength="11"
            android:background="@mipmap/phone_edit"
            android:hint="输入手机号码"
            android:textColor="@color/colorWhite"
            android:paddingLeft="@dimen/dp_15"
            android:textColorHint="#c2d7fe"
            android:textCursorDrawable="@drawable/edit_gb" />
        <EditText
            android:id="@+id/pass_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:hint="输入密码"
            android:paddingLeft="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_53"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_53"
            android:textColorHint="#c2d7fe"
            android:layout_below="@+id/edit_phone"
            android:layout_marginTop="@dimen/dp_10"
            android:textCursorDrawable="@drawable/edit_gb"
            android:visibility="gone"
            android:background="@mipmap/phone_edit"/>

        <EditText
            android:id="@+id/code_edit"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/edit_phone"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_10"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/colorWhite"
            android:background="@mipmap/code"
            android:hint="输入短信验证码"
            android:paddingLeft="@dimen/dp_15"
            android:textColorHint="#c2d7fe"
            android:textCursorDrawable="@drawable/edit_gb" />

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/edit_phone"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/code_edit"
            android:background="@mipmap/code"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_slip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_260"
            android:text="忘记了？找回密码"
            android:visibility="gone"
            android:textColor="#FFE153"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_99"
            android:layout_height="wrap_content">
            <View
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_1"
                android:alpha="0.2"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:alpha="0.2"
                android:text="其他登录方式"/>
            <View
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_1"
                android:alpha="0.2"
                android:background="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:src="@mipmap/wx"/>
            <ImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:src="@mipmap/qq"/>
            <ImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:src="@mipmap/wb"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginRight="@dimen/dp_53"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_330"
            android:enabled="false"
            android:textSize="@dimen/sp_20"
            android:background="@mipmap/login_no"/>
        <LinearLayout
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_305"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/select_bt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="我已阅读并同意"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="#FFE153"
                android:text="用户协议"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:text="和"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFE153"
                android:textSize="@dimen/sp_12"
                android:text="隐私政策"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
