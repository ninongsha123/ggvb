<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_picture"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            app:riv_corner_radius="@dimen/dp_2"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorTextTitleHome"
            android:layout_toLeftOf="@+id/iv_picture"
            android:layout_alignTop="@+id/iv_picture"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="宝宝猛长期表现是什么？家长该怎么做？"/>
        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorTextSubhead"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/iv_picture"
            android:layout_alignBottom="@+id/iv_picture"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="-2dp"
            android:text="宝宝出生的那一刻，人生的竞赛就开始了。月子里，比各家孩子..."/>
        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/colorView"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>
    </RelativeLayout>
</LinearLayout>