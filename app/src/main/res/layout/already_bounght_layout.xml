<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <www.linwg.org.lib.LCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowSize="@dimen/dp_5"
        app:shadowColor="#003BFF"
        app:cardBackgroundColor="@color/colorWhite"
        app:shadowFluidShape="linear"
        app:cornerRadius="@dimen/dp_5">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp_166"
                android:layout_height="@dimen/dp_110"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="@dimen/dp_5"
                app:riv_corner_radius_top_right="@dimen/dp_5"
                app:riv_corner_radius_bottom_left="0dp"
                app:riv_corner_radius_bottom_right="0dp"
                />
            <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                android:id="@+id/tv"
                android:layout_width="@dimen/dp_139"
                android:layout_height="@dimen/dp_33"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_15"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/colorTextTitleHome"
                android:text="孩子叛逆不可怕，就怕你不会管"/>
        </LinearLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>