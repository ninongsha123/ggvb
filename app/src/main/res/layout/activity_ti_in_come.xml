<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.income.TiInComeActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/rec_back" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="提现"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <TextView
            android:id="@+id/sdas"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到账银行卡"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14"
            />
        <RelativeLayout
            android:id="@+id/add_cards"
            android:layout_toRightOf="@+id/sdas"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/jias"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@mipmap/jias"
            />

        <TextView
            android:id="@+id/add_card"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加银行卡"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            />

        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_240"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@mipmap/income_right_jiantou"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/cardss"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工商银行"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_110"/>

        <TextView
            android:id="@+id/banks"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尾号9062的储蓄卡"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_109"
            android:layout_marginTop="@dimen/dp_40"
            />    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#F1F1F1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_246"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/qian_tu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_77"
            android:text="￥"
            android:textColor="#ff333333"
            android:layout_marginLeft="@dimen/dp_21"
            android:textSize="@dimen/sp_22"
            />


        <EditText
            android:id="@+id/jin_e"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:digits="0123456789."
            android:inputType="number"
            android:theme="@style/MyEditText"
            android:layout_marginRight="@dimen/dp_16"
            android:text=""
            />

        <ImageView
            android:id="@+id/qingchu"
            android:visibility="gone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_73"
            android:layout_marginLeft="@dimen/dp_300"
            android:background="@mipmap/qingchu"
            />

        <TextView
            android:id="@+id/yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_131"
            android:text="可提现余额 ￥ 2000.00，满 ￥ 20可提现"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:id="@+id/quanti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:layout_marginTop="@dimen/dp_131"
            android:textColor="#ff16d0ff"
            android:layout_marginLeft="@dimen/dp_253"
            android:textSize="@dimen/sp_13"
            />

        <Button
            android:id="@+id/ti_xians"
            android:layout_width="@dimen/dp_343"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_171"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:background="@drawable/shape_blue_tixian"
            android:text="提现" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每月的1日-7日为平台结算时间，不可进行提现操作"
            android:textColor="#ff999999"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_220"
            />
    </RelativeLayout>

</LinearLayout>