<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tiancaijiazu.app.activitys.early.fragments.TrialClassFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.tiancaijiazu.app.utils.status.LoadingLayout
        android:layout_width="match_parent"
        app:isFirstVisible="true"
        android:id="@+id/loadingLayout"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:focusable="true"
                android:background="@color/color_earlveducation"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">

                    <RelativeLayout
                        android:id="@+id/try_listener"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_193"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@mipmap/trial_class_back_one">

                        <TextView
                            android:id="@+id/ka_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_36"
                            android:includeFontPadding="false"
                            android:text="天才家族早教课"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_17" />
                        <TextView
                            android:id="@+id/card_name"
                            android:layout_toRightOf="@+id/ka_name"
                            android:layout_alignBottom="@+id/ka_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_22"
                            android:includeFontPadding="false"
                            android:textColor="@color/colorWhite"
                            android:layout_marginBottom="-2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="试听卡"/>
                        <ImageView
                            android:id="@+id/iv_get"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_17"
                            android:layout_toRightOf="@+id/card_name"
                            android:layout_alignBottom="@+id/ka_name"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@mipmap/already_received"/>

                        <TextView
                            android:id="@+id/summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ka_name"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_13"
                            android:includeFontPadding="false"
                            android:text="来自清华斯坦福的家庭启蒙实践"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />
                        <LinearLayout
                            android:id="@+id/line"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/summary"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_30"
                                android:src="@mipmap/five_jie"/>
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_30"
                                android:src="@mipmap/trial_jia"/>
                            <ImageView
                                android:layout_width="@dimen/dp_115"
                                android:layout_height="@dimen/dp_30"
                                android:src="@mipmap/one_jie"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/birth_mess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/line"
                            android:layout_marginTop="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="宝宝生日:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/birth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:text=""
                                android:textColor="#FFE58C"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/birth_mess"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_17"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前课程段:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/baby_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:text=""
                                android:textColor="#FFE58C"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:id="@+id/theme_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:includeFontPadding="false"
                        android:text="周主题：大自然-空气"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/theme_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@drawable/bg_btn_yuan"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_17"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_14"
                        android:paddingBottom="@dimen/dp_13"
                        android:text="空气无色又无形，我们看不到它，却能处处感受到它。本周以大自然中的空气为主题，一起近距离地去寻找它吧！"
                        android:textColor="@color/colorTextTitleHome"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@mipmap/trial_class_back_two"
                        android:layout_marginTop="@dimen/dp_15">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:includeFontPadding="false"
                            android:textColor="#FEFEFE"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="1000+天才家族和天才世家品牌教具"/>
                        <ImageView
                            android:layout_toRightOf="@+id/title"
                            android:layout_width="@dimen/dp_19"
                            android:layout_height="@dimen/dp_19"
                            android:layout_alignBottom="@+id/title"
                            android:layout_marginBottom="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:src="@mipmap/shi_min_biao"/>
                        <TextView
                            android:layout_below="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/colorWhite"
                            android:includeFontPadding="false"
                            android:layout_alignLeft="@+id/title"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="完美匹配课程  按月龄免费邮寄"/>
                    </RelativeLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylerView"
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"/>

                <!--<LinearLayout
                    android:id="@+id/line"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:background="@color/colorWhite"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#00DEFF"
                        android:text="回顾往期课程"/>

                </LinearLayout>-->
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.tiancaijiazu.app.utils.status.LoadingLayout>


</LinearLayout>
