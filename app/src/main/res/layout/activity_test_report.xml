<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.tiancaijiazu.app.activitys.evalua.TestReportActivity">
<com.tiancaijiazu.app.utils.status.LoadingLayout
    app:isFirstVisible="true"
    android:layout_below="@+id/relative"
    android:id="@+id/loadingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clipChildren="false"
            android:background="#F9F9F9"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/baby_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/baby_name_back"
                    android:gravity="center"
                    android:drawableRight="@mipmap/baby_name_xiala"
                    android:text="大海豚"/>


                <LinearLayout
                    android:id="@+id/record_line"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#00CFE2"
                        android:text="48个月测评记录"/>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_8"
                        android:src="@mipmap/baby_right_jiantou"/>
                </LinearLayout>
            </RelativeLayout>
            <com.tiancaijiazu.app.activitys.evalua.views.RadarView
                android:id="@+id/radarView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_343"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@mipmap/radar_back"
                android:layout_marginTop="@dimen/dp_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_12"
                android:textColor="#00C3D5"
                android:text="左右滑动查看"
                />
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                app:vpi_default_color="#00C3D5"
                app:vpi_distance="@dimen/dp_14"
                app:vpi_distanceType="BY_DISTANCE"
                app:vpi_indicatorType="CIRCLE_LINE"
                app:vpi_length="@dimen/dp_14"
                app:vpi_radius="@dimen/dp_2" />
            <com.tiancaijiazu.app.activitys.evalua.views.HeightViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:layout_marginBottom="@dimen/dp_73"
                android:layout_gravity="center"
                android:clipChildren="false"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.tiancaijiazu.app.utils.status.LoadingLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/rec_back" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:layout_width="wrap_content"
            android:id="@+id/a"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="测评报告"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/to_measure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_8"
        android:src="@mipmap/to_measure"/>
</RelativeLayout>
