<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_gw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_116"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_116"
            android:layout_marginTop="@dimen/dp_12"
            android:src="#F1F1F1"
            android:scaleType="fitXY" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_5"
            android:lineSpacingExtra="@dimen/dp_2"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="货物生活方式是客服呢"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/shopping"
                android:textSize="@dimen/sp_13" />

            <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="69"
                android:textColor="@color/shopping"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>