<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <www.linwg.org.lib.LCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        app:cardBackgroundColor="@color/colorWhite"
        app:cornerRadius="@dimen/dp_5"
        app:shadowColor="#003BFF"
        app:shadowFluidShape="linear"
        app:shadowSize="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_145"
                android:scaleType="fitXY"/>

            <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_1"
                android:maxLines="2"
                android:text="卓德艾曼塔尔奶酪苏反共随和大方司法和发的回..."
                android:textColor="@color/colorTextTitleHome"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_12">

                <TextView
                    android:id="@+id/fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:text="¥"
                    android:textColor="@color/shopping"
                    android:textSize="@dimen/sp_10" />

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_0_5"
                    android:layout_toRightOf="@+id/fuhao"
                    android:text="570"
                    android:textColor="@color/shopping"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/yuan_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:layout_toRightOf="@+id/money"
                    android:text="¥890"
                    android:textColor="@color/colorTextSubhead"
                    android:textSize="@dimen/sp_10" />


            </RelativeLayout>
        </LinearLayout>

    </www.linwg.org.lib.LCardView>
</LinearLayout>