<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.tiancaijiazu.app.activitys.activitypage.homepageactivitys.SubheadTwoActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/tuis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_207"
            android:layout_marginTop="-3dp"
            android:src="@mipmap/station" />

        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@mipmap/sta_back"
            />

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_2"
            android:src="@mipmap/share"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_176"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="#000000"
            android:alpha="0.2"
            >
        <TextView
            android:id="@+id/bo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在播放:Little star"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/firsts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用声音来一起磨耳朵吧"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#F1F1F1" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/loadjia"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />
        </LinearLayout>
<com.tiancaijiazu.app.utils.status.LoadingLayout
    android:layout_width="match_parent"
    android:id="@+id/loadingLayout"
    app:isFirstVisible="true"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />
</com.tiancaijiazu.app.utils.status.LoadingLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/loader"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>
