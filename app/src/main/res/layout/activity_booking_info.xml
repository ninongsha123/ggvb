<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.tiancaijiazu.app.activitys.offline.BookingInfoActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="@dimen/dp_64">
            <ImageView
                android:id="@+id/iv_finis"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/rec_back"/>
            <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorTextTitleHome"
                android:layout_marginBottom="@dimen/dp_11"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
            android:text="免费预约"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#F1F1F1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:text="宝宝姓名："/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34">
                <EditText
                    android:id="@+id/baby_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/edit_pl"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/dp_11"
                    android:maxLength="6"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextTitleHome"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="#CECECE"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_70"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:text="宝宝年龄："/>
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_34">
                <EditText
                    android:id="@+id/baby_years"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/edit_pl"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/dp_11"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="2"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextTitleHome"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="#CECECE"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:text="岁"/>
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_34">
                <EditText
                    android:id="@+id/baby_days"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/edit_pl"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/dp_11"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextTitleHome"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="#CECECE"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:text="月"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_70"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:text="手机号"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_height="@dimen/dp_34">
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/edit_pl"
                    android:background="@color/colorWhite"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/dp_11"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextTitleHome"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="#CECECE"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_63"
            android:layout_marginRight="@dimen/dp_63"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/colorWhite"
            android:clickable="false"
            android:enabled="false"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:background="@drawable/bg_reserve"
            android:text="提交"/>
    </LinearLayout>
</RelativeLayout>
