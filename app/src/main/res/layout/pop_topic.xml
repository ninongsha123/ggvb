<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv"
            android:background="#000000"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="match_parent"
            android:background="@drawable/bg_tab_yuan"
            android:clickable="true"
            android:layout_marginTop="@dimen/dp_77"
            android:layout_height="@dimen/dp_91">
            <ImageView
                android:id="@+id/iv_finis"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@mipmap/unpublish"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorTextTitleHome"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_below="@+id/frame"
                android:layout_centerHorizontal="true"
                android:text="添加话题"/>
            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heng"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_3"
                    android:background="@drawable/bg_tab_topic"/>
            </FrameLayout>

            <EditText
                android:id="@+id/edit_sou"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_tab_edit"
                android:layout_marginLeft="@dimen/dp_16"
                android:drawableLeft="@mipmap/sou"
                android:paddingLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorTextTitleHome"
                android:maxLength="12"
                android:paddingRight="@dimen/dp_10"
                android:textCursorDrawable="@drawable/edit_pl"
                android:textColorHint="@color/colorTextSubhead"
                android:layout_marginRight="@dimen/dp_16"
                android:hint="搜索更多话题"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_below="@+id/rela"
            android:clickable="true"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:id="@+id/tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/colorTextSubhead"
                android:text="推荐话题"/>
            <TextView
                android:id="@+id/xin_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tuijian"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:includeFontPadding="true"
                android:textColor="#00DEFF"
                android:layout_marginLeft="@dimen/dp_10"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv"
            android:background="#F3F5F9"
            android:layout_below="@+id/relative"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>