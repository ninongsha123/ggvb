<?xml version="1.0" encoding="utf-8"?>
<com.tiancaijiazu.app.activitys.views.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="@dimen/dp_6"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_tab_line"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/select_gw"/>
        <com.tiancaijiazu.app.fragments.views.NiceImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_toRightOf="@+id/checkbox"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="#F3E6E6"
            android:scaleType="fitXY"
            app:corner_radius="2dp"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_marginRight="@dimen/dp_57"
            android:maxLines="2"
            android:enabled="true"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorTextTitleHome"
            android:text="内置在PS中的插件面板，无需打开第三个软件"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/image"/>
        <ImageView
            android:id="@+id/guan"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:src="@mipmap/finis"/>
        <TextView
            android:id="@+id/qian_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorTextSubhead"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/title_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="黄色（升级款）"/>
    <LinearLayout
        android:layout_alignBottom="@+id/image"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/shopping"
            android:textSize="@dimen/sp_11" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:text="169"
            android:textColor="@color/shopping"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/jian"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/jian"/>
            <EditText
                android:id="@+id/sum"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_25"
                android:text="1"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:clickable="false"
                android:enabled="false"
                android:textColor="@color/colorTextTitleHome"
                android:background="@mipmap/edit"/>
            <ImageView
                android:id="@+id/jia"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/jia"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/delete"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="删除"
            android:background="@mipmap/zuo_shan"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_125" />
    </LinearLayout>
</com.tiancaijiazu.app.activitys.views.SwipeItemLayout>