<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorTextTitleHome"
            android:text="爱吃菠菜"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorTextTitleHome"
            android:layout_alignBottom="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="@dimen/dp_14"
            android:includeFontPadding="false"
            android:text="15010565227"/>
        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/diqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorTextTitleHome"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:maxLines="2"
            android:layout_marginRight="@dimen/dp_56"
            android:enabled="true"
            android:includeFontPadding="false"
            android:text="北京市朝阳区高碑店北花园小区3号院4号楼"/>
        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/diqu"
            android:background="@color/colorView"/>
        
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:background="@drawable/select_dz"
            android:layout_below="@+id/v"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_11"
            android:button="@null"/>
        <TextView
            android:id="@+id/moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorTextTitle"
            android:layout_toRightOf="@+id/checkbox"
            android:layout_alignBaseline="@+id/checkbox"
            android:layout_marginLeft="@dimen/dp_1"
            android:text="设为默认地址"/>
        <LinearLayout
            android:id="@+id/shan"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/v"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_shan"
                android:layout_toLeftOf="@+id/tv_shan"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_1"
                android:src="@mipmap/shan_chu"/>
            <TextView
                android:id="@+id/tv_shan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorTextTitle"
                android:text="删除"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bian"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/v"
            android:layout_toLeftOf="@+id/shan"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_height="@dimen/dp_22"
                android:src="@mipmap/bian_ji"/>
            <TextView
                android:id="@+id/tv_bian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorTextTitle"
                android:text="编辑"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>