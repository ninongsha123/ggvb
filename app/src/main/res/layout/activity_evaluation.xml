<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context="com.tiancaijiazu.app.activitys.evalua.EvaluationActivity">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/rec_back" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="儿童发育综合测评系统"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_17" />


    </RelativeLayout>



        <LinearLayout
            android:layout_below="@+id/relative"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorTextSubhead"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_11"
                android:text="整个测评共分为五个维度，包括：运动能力、动手能力、学习能力、语言能力、社交能力"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#00DEFF"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:src="@mipmap/darts"/>
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:id="@+id/name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/colorTextTitleHome"
                        android:text="学会学习"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—">

                    </TextView>
                    <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                        android:id="@+id/name_branch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/colorTextTitleHome"
                        android:text="感知觉"/>

                </LinearLayout>
                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorTextTitleHome"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_32"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="用动作表示理解妈妈说的单词、词组和简单的句子"/>
                <ProgressBar
                    android:id="@+id/bottom_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_30"
                    android:max="100"
                    android:progressDrawable="@drawable/evalua_progress" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_44">
                    <LinearLayout
                        android:id="@+id/back"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:src="@mipmap/cdup_left"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorTextSubhead"
                            android:text="上一题"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/topic_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/colorTextSubhead"
                        android:layout_marginRight="@dimen/dp_17"
                        android:text="总15题"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_18"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"/>
        </LinearLayout>
<RelativeLayout
    android:layout_above="@+id/los"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    >
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/nextPage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:src="@mipmap/nextp"
        />
    <TextView
        android:layout_below="@+id/nextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上滑查看分项报告"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/los"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测评期间暂停系统会自动保存进度72小时"
            android:textSize="@dimen/dp_11"
            android:layout_gravity="center_horizontal"
            android:textColor="#999999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本测评系统由多名国内知名早教专家历时5年联合研发"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_11"
            android:textColor="#999999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测评中有需要宝宝做出相关动作的题目宝宝在身边测评结果会更准确"
            android:textSize="@dimen/dp_11"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#999999"
            android:layout_marginBottom="24.5dp"
            />
    </LinearLayout>
</RelativeLayout>
