<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.tiancaijiazu.app.activitys.early.ExclusiveCourseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="@dimen/dp_64">

        <ImageView
            android:id="@+id/iv_finis"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/can_or_not_back" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewTitle
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="某某的专属早教课"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_17" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/colorView"/>
    <com.tiancaijiazu.app.utils.status.LoadingLayout
        android:id="@+id/loadingLayout"
        app:isFirstVisible="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_earlveducation"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rela"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@mipmap/wellcard">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:text="早教学院无忧卡"
                            android:textColor="#AD6405"
                            android:textSize="@dimen/sp_19" />

                        <ImageView
                            android:id="@+id/renewal"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_23"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_14"
                            android:src="@mipmap/renew" />

                        <TextView
                            android:id="@+id/baby_birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:includeFontPadding="false"
                            android:text="宝宝生日："
                            android:textColor="#AD6405"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/baby_birth"
                            android:layout_toRightOf="@+id/baby_birth"
                            android:text="2019-6-1"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/curriculum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/birth"
                            android:layout_marginLeft="@dimen/dp_29"
                            android:layout_toRightOf="@+id/birth"
                            android:text="当前课程阶段："
                            android:textColor="#AD6405"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/curriculum"
                            android:layout_toRightOf="@+id/curriculum"
                            android:text="6-8月龄"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />
                        <RelativeLayout
                            android:id="@+id/prog"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/birth"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginRight="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/jindubei"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_7"
                                android:src="@mipmap/jindu" />
                            <ProgressBar
                                android:id="@+id/bottom_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_3"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:layout_marginRight="@dimen/dp_2"
                                android:max="100"
                                android:progressDrawable="@drawable/jz_bottom_progress_di" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/prog"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="已推送 29 周/共 53 周"
                            android:textColor="#AD6405"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_9"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_18"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="@dimen/dp_65"
                            android:layout_height="@dimen/dp_24"
                            android:background="@drawable/select_clock"
                            android:button="@null" />

                        <TextView
                            android:id="@+id/tv_one"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="本月共打卡"
                            android:textColor="@color/colorTextTitleHome"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textColor="#FF8261"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天"
                            android:textColor="@color/colorTextTitleHome"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/iv_four"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:src="@mipmap/right_min_jian" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_37"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@mipmap/latest_tags" />

                    <LinearLayout
                        android:id="@+id/bell_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/bell" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-07-08推送下周课程"
                            android:textColor="@color/colorTextTitleHome"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bell_line"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_13"
                        android:background="@drawable/bg_college_introduce"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_14"
                            android:text="第29周：大自然-空气"
                            android:textColor="@color/colorTextTitleHome"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_17"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:lineSpacingExtra="@dimen/dp_5"
                            android:text="空气无色又无形，我们看不到它，却能处处感受到它。本周以大自然中的空气为主题，一起近距离地去寻找它吧！"
                            android:textColor="@color/colorTextTitleHome"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recylerView"
                        android:layout_below="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"/>
                    <LinearLayout
                        android:id="@+id/line"
                        android:orientation="horizontal"
                        android:layout_below="@+id/recylerView"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#00DEFF"
                            android:text="回顾往期课程"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.tiancaijiazu.app.utils.status.LoadingLayout>


</LinearLayout>
