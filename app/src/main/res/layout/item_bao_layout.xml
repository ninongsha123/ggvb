<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <www.linwg.org.lib.LCardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        app:cardBackgroundColor="@color/colorWhite"
        app:cornerRadius="@dimen/dp_5"
        app:shadowColor="#5473c2"
        app:shadowFluidShape="linear"
        app:shadowSize="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/defau"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/default_baby"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_37"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/baby_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="宝宝头像："
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/baby_iv"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="#E3E3E3" />
            </LinearLayout>

            <View
                android:id="@+id/v_zero"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@id/line1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/colorView" />

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/v_zero"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/baby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="宝宝小名："
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/ed_babyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_20"
                    android:maxLines="1"
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:id="@+id/v_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@id/line2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/colorView" />

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/v_one"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/baby_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="宝宝生日："
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/ed_babybirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_20"
                    android:maxLines="1"
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:id="@+id/v_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@id/line3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/colorView" />

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/v_two"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/baby_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_two"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="宝宝性别："
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />

                <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
                    android:id="@+id/ed_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_20"
                    android:maxLines="1"
                    android:textColor="@color/colorTextTitleHome"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:id="@+id/v_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@id/line4"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/colorView" />

            <ImageView
                android:id="@+id/compile"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/v_three"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@mipmap/compile_baby" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_24"
                android:layout_alignBottom="@+id/compile"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_toLeftOf="@+id/compile"
                android:src="@mipmap/delete_baby" />
        </RelativeLayout>

    </www.linwg.org.lib.LCardView>
</LinearLayout>