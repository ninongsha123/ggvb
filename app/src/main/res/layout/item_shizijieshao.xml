<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_120"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/dp_5" />

        <com.tiancaijiazu.app.utils.MediumBoldTextViewStandard
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="课程名称"
            android:textColor="@color/colorTextTitleHome"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_14"
            android:layout_alignTop="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toLeftOf="@+id/name"
            android:layout_toRightOf="@id/name"
            android:src="@mipmap/youjiaoju" />
        <LinearLayout
            android:id="@+id/lin"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/leibie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="综合类｜0-6个月"
                android:textColor="@color/colorTextSubhead"
                android:textSize="@dimen/sp_12" />

            <!--<View
                android:id="@+id/line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_11"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/colorTextSubhead" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:text="0-6个月"
                android:textColor="@color/colorTextSubhead"
                android:includeFontPadding="false"
                android:textSize="@dimen/sp_12" />-->
        </LinearLayout>


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/iv"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="课程简介是电脑卡的那份看司法和你"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv"
            android:layout_alignBottom="@+id/iv"
            android:src="@mipmap/freeyy" />
    </RelativeLayout>


</RelativeLayout>