<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiancaijiazu.app.activitys.down.DownLoadListActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/iv_finis"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/rec_back" />

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magic_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/dp_82"
                android:paddingRight="@dimen/dp_82"
                android:paddingBottom="@dimen/dp_4"/>
            <TextView
                android:id="@+id/bianji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorTextTitleHome"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dp_11"
                android:paddingRight="@dimen/dp_16"
                android:text="编辑"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#F1F1F1"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_0"/>
        <LinearLayout
            android:id="@+id/bian"
            android:layout_width="match_parent"
            android:background="#F9F9F9"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:id="@+id/all"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:textColor="@color/colorTextTitleHome"
                android:text="全选"/>
            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_17"
                android:background="@color/colorTextTitle"/>
            <TextView
                android:id="@+id/delete"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:textColor="@color/colorZhu"
                android:text="删除"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
