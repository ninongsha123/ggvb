<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/shengji1"
        android:layout_height="390dp">

        <TextView
            android:id="@+id/tesi"
            android:layout_width="224dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:lineSpacingExtra="5dp"
            android:text="为方便您下载新版本，本服务需要您授权“存储权限功能”，以便您下载最新版本App。"
            android:textColor="#333333"
            android:textSize="15sp" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:lineSpacingExtra="5dp"
            android:text="请到“手机设置”-“应用”-“权限管理”页面找到 天才家族 将存储权限设置为“打开”或“始终允许”状态。"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/location_kowent"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_tab_go_on"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="知道了"/>

            <Button
                android:id="@+id/location_kowents"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_tab_go_on"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="去设置"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
